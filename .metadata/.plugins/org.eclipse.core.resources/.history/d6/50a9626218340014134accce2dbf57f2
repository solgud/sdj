import java.util.Random;

public class NumberGuesser
{

   public static void main(String[] args)
   {
      Random random = new Random(); 
      int target = random.nextInt(1000) + 1;

      int nextGuess = 500;
      int lastGuess = 1000;
      int placeholder;
      
      while (nextGuess != target)
      {
         System.out.println("\nMake a new guess!");
         placeholder = nextGuess;
         
         if (nextGuess > target)
         {
            System.out.println(nextGuess + " is too high!");
            nextGuess = nextGuess - ((lastGuess - nextGuess) / 2);
         }

         else if (nextGuess < target)
         {
            System.out.println(nextGuess + " is too low!");
            nextGuess = nextGuess + ((lastGuess - nextGuess) / 2);
         }
         if (lastGuess == nextGuess)
            break;
         lastGuess = placeholder;
      } 
      System.out.println("\nYou got it! The value was: " + target);
   }
}
