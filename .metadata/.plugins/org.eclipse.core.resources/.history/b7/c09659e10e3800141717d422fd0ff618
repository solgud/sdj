import lejos.nxt.LightSensor;
import lejos.nxt.MotorPort;
import lejos.nxt.SensorPort;
import lejos.robotics.LightScanner;


public class FollowTheLine
{

   public static void main(String[] args)
   {
      // Follow a black line using the light sensor

      LightSensor light = new LightSensor(SensorPort.S1);
      boolean stop = false;
      
      while (!stop)
      {
         MotorPort.A.controlMotor(100, 1);
         MotorPort.B.controlMotor(96, 1);
         
         if (light.readValue() < 20)
         {
           MotorPort.A.controlMotor(100, 2); 
         }
         
         Thread.sleep(2000);

      }
      
   }

}
