import lejos.nxt.SensorPort;
import lejos.nxt.SoundSensor;


public class ShutUp
{

   public static void main(String[] args)
   {
      SoundSensor sound = new SoundSensor(SensorPort.S1);
      boolean stop = false;
      
      while (!stop)
      {

         if (sound.readValue() < 80)
            stop = true;
         
         Thread.sleep(50);
      }
      
   }

}
